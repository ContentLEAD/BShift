        $(document).ready(function() {
            var slides = $('#frame').find('li');
            var count = slides.length;
            for(i=0;i<count;++i) {
                first=slides[i];
                loop(first,i);
            }
            function loop(first,i) {
                first.toggle();
                console.log(first);
            }
        }
